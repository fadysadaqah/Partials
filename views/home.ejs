<body>
    <link rel="stylesheet" href="css\home.css">
    <div class="home-main">
        <div class="main-text">
            <span class="welcome-to">Welcome To </span>Site Name
                    
                    <div class='description'>
                        First website built for x topic
                        <br>
                        <br>
                        <br>
                    </div>

        </div>
        <div class="register">
            <div class="signup-form">

                <div class="text-center head">Register</div>
                <small class="text-center d-block">To First Website build for x topic</small>
                <form action="/signup" method="post">
                    <!-- <div class='inputs-group'>
                    <input name="first_name" type="text" class="form-control" placeholder="First name">
                    <input name="last_name" type="text" class="form-control" placeholder="Last name">
                </div> -->
                    <input name="email" type="email" class="form-control" placeholder="First Name">
                    <input name="email" type="email" class="form-control" placeholder="Last Name">
                    <input name="email" type="email" class="form-control" placeholder="Email address" autocomplete>
                    <input name="password_a" type="password" class="form-control" placeholder="Password" autocomplete>
                    <input name="password_b" type="password" class="form-control" placeholder="Confirm password"
