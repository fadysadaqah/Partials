                </div>

                <!-- ###################### -->
                <div class="text-center">
                    <span class="text-muted">Already have an account?</span>
                    <span class="signin-btn form-flip-btn">Sign in</span>
                </div>
            </div>
            <!-- ########################################################################################## -->
            <div class="signin-form">

                <div class="text-center head">Sign in</div>
                <small class="text-center d-block">To First Website build for x topic</small>
                <form action="/signin" method="post">

                    <input name="email" type="email" class="form-control" placeholder="Email address">
                    <input name="password_a" type="password" class="form-control" placeholder="Password">
                    <button class="btn btn-dark">Sign in</button>
                </form>
                <br>
                <!-- ###################### -->
                <hr width="100%">
                <div class="or">
                    or
                </div>
                <div class="d-flex flex-column align-items-center">

                    <div class="g-signin2 m-3" data-width="200" data-longtitle="true" data-onsuccess="onSignIn"
                        data-theme="light">
                    </div>

                    <div class="fb-login-button" data-width="" data-size="large" data-button-type="login_with"
                        data-auto-logout-link="false" data-use-continue-as="false"></div>
                </div>
                <br>
                <!-- ###################### -->
                <div class="text-center">
                    <span class="text-muted">Don't have an account?</span>
                    <span class="signup-btn form-flip-btn">Sign up</span>
                </div>
                <div class="text-center">

                    <span class="form-flip-btn">Forgotten password</span>
                </div>
            </div>
